<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip">

    <ImageView
        android:id="@+id/main_recyclerview_icon"
        android:layout_width="67dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="6dip"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/main_recyclerview_group_name"
        android:layout_width="151dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="17dp"
        android:layout_toEndOf="@+id/main_recyclerview_icon"
        android:ellipsize="marquee"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/main_recyclerview_group_amount"
        android:layout_width="99dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="19dp"
        android:layout_toEndOf="@+id/main_recyclerview_group_name"
        android:ellipsize="marquee"
        android:textSize="12sp" />

</RelativeLayout>