<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip">

    <TextView
        android:id="@+id/transaction_recycler_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/transaction_recycler_image"
        android:layout_marginStart="17dp"
        android:layout_marginTop="-5dp"
        android:layout_toEndOf="@+id/transaction_recycler_image"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/transaction_recycler_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="102dp"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/transaction_recycler_amount"
        android:layout_toEndOf="@+id/transaction_recycler_image"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

    <TextView
        android:id="@+id/transaction_recycler_amount"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="163dp"
        android:layout_marginEnd="6dp"
        android:layout_toEndOf="@+id/transaction_recycler_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/transaction_recycler_image"
        android:layout_width="43dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="6dp" />
</RelativeLayout>