<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_create_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".group.CreateGroupFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/txtGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/groupName" />

    <EditText
        android:id="@+id/txtGroupID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/accountID" />

    <Button
        android:id="@+id/bttn_Create_Group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="82dp"
        android:text="@string/createGroupButton" />

    <EditText
        android:id="@+id/txtGroupPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtGroupName"
        android:layout_alignParentTop="true"
        android:layout_marginTop="139dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="@string/accountPW" />

    <EditText
        android:id="@+id/txtGroupPW2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtGroupName"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="207dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="@string/accountPW" />

</RelativeLayout>